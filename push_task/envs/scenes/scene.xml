<mujoco model="stretch scene">
  <include file="stretch.xml"/>
  <!-- <include file="new_fridge.xml"/> -->
  <statistic center="0 0 .75" extent="1.2" meansize="0.05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="floor" texture="groundplane"/>
    <texture type="2d" name="wood" file="wood.png"/>
    <material name="wood" texture="wood"/>
    <material name="object" rgba=".2 .2 .2 1"/>
    <texture type="2d" name="alphabet_soup_texture" file="grocery/AlphabetSoup.png"/>
    <material name="alphabet_soup" texture="alphabet_soup_texture" specular="0.5" shininess="0.5"/>
    <mesh file="grocery/AlphabetSoup.obj" scale="0.01 0.01 0.01"/>
    <texture type="skybox" builtin="gradient" rgb1="0.44 0.80 1.00" rgb2="1 1 1" width="512" height="3072"/>
    <material name="shelf" rgba=".9 .9 .9 1"/>
    <material name="plastic" rgba="1 1 1 0.3" reflectance="0.4"/>
    <material name="wall" rgba=".2 .2 .2 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="floor"/>

    <body name="Table" pos="-0.2 0 0.25">
        <body name="left_leg_front" pos="0 0 0">
          <geom type="box" size="0.010 0.010 0.25" material="wall"/>
        </body>
        <body name="right_leg_front" pos="0.4 0 0">
          <geom type="box" size="0.010 0.010 0.25" material="wall"/>
        </body>
        <body name="right_leg_back" pos="0.4 0.2 0">
          <geom type="box" size="0.010 0.010 0.25" material="wall"/>
        </body>
        <body name="left_leg_back" pos="0 0.2 0">
          <geom type="box" size="0.010 0.010 0.25" material="wall"/>
        </body>
        <body name="shelf_0" pos="0.2 0.1 0.25">
          <geom type="box" size="0.21 0.11 0.01" material="shelf"/>
        </body>
    </body>
    <body name="alphabet_soup" pos="0 .05 0.5" quat="1 1 0 0">
      <freejoint/>
        <geom material="alphabet_soup" mesh="AlphabetSoup" class="visual" shellinertia="true" mass="0.2"/>
        <geom mesh="AlphabetSoup" class="collision"/>
    </body>
  </worldbody>
</mujoco>
